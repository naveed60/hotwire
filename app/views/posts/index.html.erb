
<%=turbo_frame_tag :modal do%>


<div class="w-full">
<p style="color: green"><%= notice %></p>
<div class="flex justify-between items-center">

<h1 class="font-bold text-4xl">Posts</h1>

<%= link_to "New post", new_post_path,class: "btn btn-danger " ,data:{turbo_frame: "modal"} %>

</div>


<div id="posts">
<hr style="width:50%;text-align:left;margin-left:0">
<% @posts.each do |post| %>
  
    <%= render post %>
    </div>
    <p>
    
      <%= link_to "Show this post", post ,class: "btn btn-danger"%>
      
     <hr style="width:50%;text-align:left;margin-left:0">
    </p>
  <% end %>



</div>

<%end%>
</div>
